---
import Layout from '../../layouts/Layout.astro';
import OrganizationManager from '../../components/OrganizationManager';
import { auth } from '../../lib/auth';

const session = await auth.api.getSession({ headers: Astro.request.headers });
if (!session) {
  return Astro.redirect('/');
}
---

<Layout title="Manage Organizations">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="mb-6">
        <a href="/dashboard" class="inline-flex items-center gap-2 text-blue-400 hover:text-blue-300 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Dashboard
        </a>
      </div>
      <div class="bg-gray-800/50 backdrop-blur-lg rounded-2xl shadow-xl p-6 border border-gray-700">
        <OrganizationManager client:load />
      </div>
    </div>
  </div>
</Layout>
