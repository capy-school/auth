---
import "../styles/global.css";
const {
  title = "Login Gateway - Secure Authentication",
  animated = false,
} = Astro.props as { title?: string; animated?: boolean | 'force' };
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class={
    `min-h-screen text-gray-100 antialiased ${
      animated === 'force'
        ? 'animated-gradient--force'
        : animated
          ? 'animated-gradient'
          : 'bg-gradient-to-br from-gray-900 via-blue-900 to-gray-900'
    }`
  }>
    <slot />
  </body>
</html>