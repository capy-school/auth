# Database
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here-min-32-chars
BETTER_AUTH_URL=http://localhost:4321
AUTH_BASE_URL=http://localhost:4321
AUTH_COOKIE_DOMAIN=localhost
# Optional comma-separated fallback list. First matching/current-host suffix wins.
AUTH_COOKIE_DOMAINS=capy.town,capyschool.com
# Optional comma-separated origins appended to default trustedOrigins.
AUTH_TRUSTED_ORIGINS=http://localhost:5174,http://localhost:4322

# Optional comma-separated origins allowed by SSO bridge redirect validation.
SSO_ALLOWED_REDIRECT_ORIGINS=http://localhost:5174,http://localhost:4322

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=

NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

LINE_CLIENT_ID=
LINE_CLIENT_SECRET=

# Email Configuration (Forward Email API)
# Get your API key at https://forwardemail.net/en/my-account/security
FORWARDEMAIL_KEY=your-api-key-here
SMTP_FROM="Capy School Auth <noreply@yourdomain.com>"

# Passkey
PASSKEY_RP_ID=localhost
PASSKEY_RP_NAME=Capy School

# Organization
ORGANIZATION_NAME=My Company
ORGANIZATION_LOGO=

# Admin
ADMIN_EMAIL=admin@yourdomain.com
